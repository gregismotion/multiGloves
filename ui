PAGE:
	- 0 SECONDARY(SPEC)
	- 1 NEXT PAGE
SECONDARY(SPEC):
	- 0 DOWN
	- 1 SELECT

MAIN(PAGE)
	- DESC: DISPLAYS TIME
MAIN(SECONDARY)
	OPTIONS:
		- "SYNC TIME (BT)"
			- SELECT: SYNC TIME OVER BT
		- "TIMER"
			- SELECT: TIMER(TAB)
		- "STOPWATCH"
			- SELECT: STOPWATCH(TAB)

TIMER(TAB):
	START:
		- 0 SET
		- 1 INCREASE
	AFTER TIMER SET:
		- 0 MAIN{PAGE}
		- 1 START/STOP
	WHILE STOP:
		- 0 RESET
		- 1 START/STOP

STOPWATCH(TAB):
	START:
		- 0 MAIN(PAGE)
		- 1 START/STOP
	AFTER REAL START:
		- 0 LAP
		- 1 START/STOP

